                       aeson >= 1.0, mtl, containers, lens, generic-lens, generic-lens-labels,
                       time, linear, text, semigroupoids, contravariant, dependent-map, dependent-sum, these, data-default
  hs-source-dirs:      src
  default-language:    Haskell2010
